{
    "version": 2,
    "builds": [
        {
            "src": "/public/index.html",
            "use": "@vercel/static-build",
            "config": {
                "zeroConfig": true
            }
        },
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/public/index.html",
            "methods": ["GET"]
        },
        {
            "src": "/api/products",
            "dest": "/index.js",
            "methods": ["GET", "POST"]
        },
        {
            "src": "/(.*)",
            "dest": "/index.js"
        }
    ]
}